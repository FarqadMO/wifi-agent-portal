# ========================================
# APPLICATION CONFIGURATION
# ========================================
NODE_ENV="development"
PORT=3000
API_PREFIX="api/v1"

# ========================================
# CORS CONFIGURATION
# ========================================
CORS_ORIGIN="http://localhost:3001,http://localhost:4200"
CORS_METHODS="GET,HEAD,PUT,PATCH,POST,DELETE,OPTIONS"
CORS_CREDENTIALS="true"

# ========================================
# RATE LIMITING
# ========================================
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# ========================================
# LOGGING CONFIGURATION
# ========================================
LOG_LEVEL="debug"
LOG_DIR="./logs"

# ========================================
# SWAGGER CONFIGURATION
# ========================================
SWAGGER_ENABLED="true"
SWAGGER_TITLE="Wi-Fi Agents Portal API"
SWAGGER_DESCRIPTION="Enterprise-grade Multi-tenant SAS Radius Integration System"
SWAGGER_VERSION="1.0"
